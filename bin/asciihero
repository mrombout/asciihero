#!/usr/bin/env node
'use strict'

process.title = 'asciihero'
const { AsciiHeroOptions, AsciiHeroInvoker } = require('../src/cli.js')

;(async () => {
  const options = new AsciiHeroOptions().parse(process.argv)
  return new AsciiHeroInvoker(options).invoke()
})()
  .then((result) => {
    if (result.exit) {
      process.exit(0)
    }
  })
  .catch((error) => {
    console.error('ERROR: ', error)
    process.exit(1)
  })
